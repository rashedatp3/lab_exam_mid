<!DOCTYPE html>
<html>
    <head>
        <title>Home</title>
    </head>
    <body>
        <style>
            table.list {
                width: 1024px;
                border-collapse: collapse;
                border-spacing: 0;
            }
    
            table.list tr>td {
                border: 1px solid #000;
                padding: 5px;
            }
            h3 {
                display: inline;
            }
        </style>
            <h3>Product Categories</h3> [ <a href="/home/product/add">Add New Product</a> ]
            <table class="list">
                <thead>
                    <tr>
                        <td>Image</td>
                        <td>Title</td>
                        <td>Category</td>
                        <td>For</td>
                        <td>Price</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    <% if(products && products.length>0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><img src="<%= product.image %>" height="100px" width="100px"></td>
                            <td><%= product.title %></td>
                            <td><%= product.category %></td>
                            <td><%= product.gender %></td>
                            <td><%= product.price %></td>
                            <td><a href="/home/product/update/<%= product.id %>">Update</a> | <a href="/home/product/delete/<%= product.id %>">Delete</a></td>
                        </tr>
                    <% }) %>
                    <% } else { %>
                    <tr>
                        <td colspan="5">No Resuls Found</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
       
    </body>
</html>